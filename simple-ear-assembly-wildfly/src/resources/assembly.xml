<?xml version="1.0" encoding="utf-8"?>
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>RELEASE</id>
	<formats>
		<format>zip</format>
	</formats>

	<includeBaseDirectory>false</includeBaseDirectory>

	<fileSets>
		<fileSet>
			<directory>../simple-ear-ear/target/</directory>
			<outputDirectory>/WILDFLY_HOME/standalone/deployments</outputDirectory>
			<includes>
				<include>simple-ear-project.ear</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/resources/modules/</directory>
			<outputDirectory>/WILDFLY_HOME/modules/</outputDirectory>
			<includes>
				<include>*/**</include>
			</includes>
		</fileSet>
	</fileSets>

	<dependencySets>
		<dependencySet>
			<useTransitiveDependencies>false</useTransitiveDependencies>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>/WILDFLY_HOME/modules/com/mobimoney/external/main</outputDirectory>
			<outputFileNameMapping>${artifact.artifactId}-${artifact.version}.${artifact.extension}</outputFileNameMapping>
			<scope>provided</scope>
			<includes>
				<include>com.thoughtworks.xstream:xstream:jar:*</include>
			</includes>
		</dependencySet>
	</dependencySets>

</assembly>